---
const importantTools = [
  // ── Fundamentales Web ───────────────────
  "html",
  "css",
  "javascript",
  "ts",

  // ── Frameworks/Librerías Front‑end populares ───
  "React",    
  "nextjs",     

  // ── Back‑end / Runtimes ────────────────
  "node", 

  // ── Bases de datos ─────────────────────
  "sql",     
  "mysql",     
  "mongo",      
  "firebase",  

  // ── DevOps / Despliegue ────────────────
  "aws",       
  "vercel",     
  "cloudflare",

  "git",        
];

// El resto de tu script permanece igual
import Capsule from "../ui/Capsule.astro";

type ToolVariant = "default" | "center";

const baseClasses = "flex flex-wrap gap-4 max-lg:gap-1 grid-auto-efe"; // Nota: "grid-auto-efe" parece tener un typo, quizá quisiste decir "grid-auto-flow" o algo similar. Lo dejaré como está.

const variantClasses: Record<ToolVariant, string> = {
  default: "cursor-default",
  center: "justify-center cursor-default",
};

const { variant = "default", linkEnabled = false, size = "md" } = Astro.props;

const classes = `${baseClasses} ${variantClasses[variant as ToolVariant]}`;
---

<div class={classes}>
  {
    importantTools.map((tool) => ( // Usamos la nueva lista "importantTools"
      <Capsule lang={tool} linkEnabled={linkEnabled} size={size} />
    ))
  }
</div>