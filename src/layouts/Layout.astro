---
import "../styles/global.css";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";

const {
  pageTitle = "Felipe Sánchez Dev | Desarrollador Full Stack y Software en Ibagué, Colombia",
  description = "Soy Juan Felipe Reyes Sánchez (felipesanchezdev), Desarrollador Full Stack en Ibagué, Colombia. Experto en JavaScript, React, Next.JS, Astro, Node.js y más. Transformo ideas en soluciones web y software a medida.",
  ogimage = {
    url: "/images/perfil.webp", 
    alt: "Juan Felipe Reyes Sánchez (felipesanchezdev) - Desarrollador Full Stack y Software en Ibagué, Colombia, especialista en soluciones web innovadoras.",
  },
} = Astro.props;

const siteUrl = new URL(Astro.url).origin;
const fullImageUrl = `${siteUrl}${ogimage.url}`; 

const SEO = {
  sitename: "Felipe Sánchez Dev | Portafolio de Desarrollo Web y Software en Ibagué",
  url: `${siteUrl}${Astro.url.pathname}`,
  locale: "es_CO", 
  author: "Juan Felipe Reyes Sánchez (felipesanchezdev)",
  twitter: "@felipesanchezdev", 
};

const fullName = "Juan Felipe Reyes Sánchez";
const commonName = "Felipe Sánchez";
const jobTitlePrimary = "Desarrollador Full Stack y Software";
const jobTitleSecondary = "Estudiante de Ingeniería de Software";
const locationCity = "Ibagué";
const locationRegion = "Tolima";
const locationCountry = "Colombia";
const nationality = "Colombiano";
const githubUsername = "felipesanchez-dev";
const linkedInProfile = "https://www.linkedin.com/in/felipereyessa/";
const instagramProfile = `https://www.instagram.com/${githubUsername}_dev`; 

const keywordsList = [
  fullName,
  commonName,
  "felipesanchezdev",
  jobTitlePrimary,
  jobTitleSecondary,
  "Desarrollador Web",
  "Ingeniero de Software",
  locationCity,
  locationRegion,
  locationCountry,
  "Desarrollo de software a medida " + locationCity,
  "Desarrollador React " + locationCity,
  "Desarrollador Next.JS " + locationCity,
  "Desarrollador Node.js " + locationCity,
  "Desarrollador Astro " + locationCity,
  "Portafolio desarrollador " + locationCity,
  "Servicios de desarrollo web " + locationCity,
  "JavaScript", "React", "Next.JS", "Astro", "Node.js", "TypeScript", "PHP", "SQL", "API REST", "React Native",
  "Algoritmia", "Resolución de Problemas", "Pensamiento Lógico",
  "Ganador Programathon CUN",
  "Proyectos tecnológicos Colombia",
  "Desarrollo de aplicaciones multiplataforma",
  "Optimización SEO para sitios web",
  "Experiencias digitales interactivas"
];
---

<html lang="es" class="dark:bg-[#0E0E11] bg-mint-50/5 font-montserrat scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="language" content="es-CO" /> 
    <meta name="copyright" content={fullName} />
    <meta name="generator" content={Astro.generator} /> 

    <title>{pageTitle}</title>

    {/* --- Favicons (bien implementados) --- */}
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" href="/favicon-16x16.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="icon" href="/android-chrome-192x192.png" sizes="192x192" />
    <link rel="icon" href="/android-chrome-512x512.png" sizes="512x512" />
    <link rel="manifest" href="/site.webmanifest" />

    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />

    <meta name="description" content={description} />
    <meta name="author" content={SEO.author} />
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content={keywordsList.join(", ")} />
    <link rel="canonical" href={SEO.url} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:alt" content={ogimage.alt} />
    <meta property="og:image:width" content="1200" /> 
    <meta property="og:image:height" content="630" /> 
    <meta property="og:url" content={SEO.url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SEO.sitename} />
    <meta property="og:locale" content={SEO.locale} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    <meta name="twitter:image:alt" content={ogimage.alt} />
    <meta name="twitter:site" content={SEO.twitter} />
    <meta name="twitter:creator" content={SEO.twitter} /> 

    <meta name="theme-color" content="#0E0E11" /> 
    <meta name="msapplication-TileColor" content="#0E0E11"/>

    <script type="application/ld+json" is:raw>
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "SoftwareDeveloper",
        "name": fullName,
        "alternateName": [githubUsername, "felipesanchezdev", "Pipe"], 
        "url": siteUrl,
        "image": fullImageUrl,
        "jobTitle": `${jobTitlePrimary} / ${jobTitleSecondary}`,
        "description": `Desarrollador Full Stack y Estudiante de Ingeniería de Software en ${locationCity}, ${locationCountry}, enfocado en crear soluciones web y software innovadoras con React, Next.JS, Node.js y Astro. Ganador del Programathon CUN.`,
        "worksFor": {
          "@type": "Organization",
          "name": "felipesanchezdev (Marca Personal)"
        },
        "nationality": nationality,
        "address": { 
          "@type": "PostalAddress",
          "addressLocality": locationCity,
          "addressRegion": locationRegion,
          "addressCountry": locationCountry
        },
        "alumniOf": [ 
          {
            "@type": "CollegeOrUniversity",
            "name": "Universidad Politécnico Grancolombiano",
            "sameAs": "https://www.poli.edu.co"
          },
          {
            "@type": "CollegeOrUniversity",
            "name": "Corporación Unificada Nacional de Educación Superior (CUN)",
            "sameAs": "URL_DE_LA_CUN" 
          }
        ],
        "award": [
          "Ganador del Programathon CUN (Nivel Departamental y Nacional - Regional Tolima)"
        ],
        "knowsAbout": [
          "Desarrollo Web", "Desarrollo Full Stack", "Desarrollo de Software", "JavaScript", "React", "Next.JS", "Astro", "Node.js", "TypeScript", "PHP", "SQL", "API REST", "React Native", "Algoritmia", "Resolución de Problemas", "SEO", "Diseño UI/UX"
        ],
        "sameAs": [ 
          `https://github.com/${githubUsername}`,
          linkedInProfile,
          `https://twitter.com/${githubUsername}`,
          instagramProfile,
          siteUrl
        ]
      })}
    </script>
  </head>

  <body class="overflow-x-hidden">
    <SpeedInsights />
    <div class="blur-circle"></div>
    <div
      style="background: linear-gradient(45deg, rgba(96, 250, 155, 0) 10.79%, rgba(96, 250, 170, 0.03) 40.92%, rgba(96, 250, 155, 0) 90.35%)"
      class="fixed top-0 left-0 w-full h-full pointer-events-none -z-[1]"
    ></div>

    <Header />
    <div class="min-h-[85vh]">
      <slot />
    </div>
    <Footer />
  </body>
</html>